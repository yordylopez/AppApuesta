<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfont="http://schemas.android.com/apk/res-auto"
    xmlns:editext="http://schemas.android.com/apk/res-auto"
    android:minWidth="400dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:background="#fffdfdfe">

        <LinearLayout
            android:layout_gravity="center|top"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0.0dip"
            android:minWidth="400dp"
            android:orientation="vertical">

            <com.yordy.ecoresi.views.CustomFontTextView
                android:textSize="19.0dip"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="center|top"
                android:id="@+id/txt_dtabaca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginBottom="10.0dip"
                android:text="Detalles de la banca"
                customfont:fontName="AvenirMedium.otf" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <com.yordy.ecoresi.views.CustomFontTextView
                        android:textSize="17.0dip"
                        android:textColor="#000000"
                        android:gravity="left|center"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/label_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5.0dip"
                        android:src="@drawable/ic_comment_512_off"
                        android:text="Nombre:"
                        customfont:fontName="AvenirMedium.otf"
                        android:textIsSelectable="false"
                        android:layout_weight="0.16" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.yordy.ecoresi.views.CustomFontTextView
                        android:textSize="16.0dip"
                        android:textColor="#000000"
                        android:layout_gravity="center|right"
                        android:id="@+id/banca_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_comment_512_off"
                        android:text="Banca tu suerte Banca tu suerte Banca tu suerte Banca tu suerte"
                        android:layout_weight="0.31"
                        customfont:fontName="AvenirMedium.otf"
                        android:gravity="left"
                        android:layout_marginTop="5dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <com.yordy.ecoresi.views.CustomFontTextView
                        android:textSize="17.0dip"
                        android:textColor="#000000"
                        android:gravity="left|center"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/label_direccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5.0dip"
                        android:src="@drawable/ic_comment_512_off"
                        android:text="Direccion:"
                        customfont:fontName="AvenirMedium.otf"
                        android:textIsSelectable="false"
                        android:layout_weight="0.16" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.yordy.ecoresi.views.CustomFontTextView
                        android:textSize="16.0dip"
                        android:textColor="#000000"
                        android:layout_gravity="center|right"
                        android:id="@+id/banca_direccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_comment_512_off"
                        android:text="quiriquire calle principal"
                        android:layout_weight="0.31"
                        customfont:fontName="AvenirMedium.otf"
                        android:gravity="left"
                        android:layout_marginTop="5dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="5dp">

                <com.yordy.ecoresi.views.CustomFontButton
                    android:textSize="19.0dip"
                    android:textColor="#fffdfcf9"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:id="@+id/ok"
                    android:background="@drawable/button_background"
                    android:padding="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Ok."
                    android:textAllCaps="false"
                    editext:fontName="AvenirMedium.otf"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>