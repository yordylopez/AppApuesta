<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#fff8f8f8"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfont="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:background="#fffdfdfe"
        android:layout_width="fill_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@id/foto_user"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="5.0dip"
            android:src="@drawable/ic_take_photo_512" />
        <com.yordy.ecoresi.views.CustomFontTextView
            android:textSize="19.0dip"
            android:textColor="#ffaeaeae"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@id/user"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="22.0dip"
            android:text="\@nombre_user"
            android:layout_weight="1.0"
            customfont:fontName="AvenirMedium.otf" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <com.malmstein.fenster.view.FensterVideoView
            android:id="@id/video"
            android:visibility="visible"
            android:fitsSystemWindows="true"
            android:layout_width="fill_parent"
            android:layout_height="250.0dip"
            android:adjustViewBounds="true"
            android:keepScreenOn="true" />
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/imagen"
            android:layout_width="fill_parent"
            android:layout_height="260.0dip"
            android:src="@drawable/foto_example"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />
        <ImageView
            android:layout_gravity="center"
            android:id="@id/play"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:src="@drawable/ic_play" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.yordy.ecoresi.views.CustomFontTextView
            android:textSize="18.0dip"
            android:textColor="#ff000000"
            android:gravity="center_vertical"
            android:layout_gravity="top"
            android:id="@+id/titulo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginTop="15.0dip"
            android:layout_marginRight="15.0dip"
            android:text="Este es el titulo parece que solo se puede colocar texto hasta tres lineas maximo escribi yhasta la segunda linea y todavia me falta otra linea mas que escribir de todas forma creom que ya me pase"
            customfont:fontName="AvenirRegular.otf"
            android:singleLine="false"
            android:phoneNumber="false"
            android:maxLines="3" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.yordy.ecoresi.views.CustomFontTextView
                android:textSize="16.0dip"
                android:textColor="#ff000000"
                android:gravity="center_vertical"
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15.0dip"
                android:text="Reputacion:"
                customfont:fontName="AvenirMedium.otf" />
            <ImageView
                android:id="@id/reputacion"
                android:layout_width="95.0dip"
                android:layout_height="25.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginBottom="10.0dip"
                android:src="@drawable/stars35" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@id/comment"
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginBottom="10.0dip"
                android:src="@drawable/ic_comment_512_off" />

            <com.yordy.ecoresi.views.CustomFontTextView
                android:textSize="11.0dip"
                android:textColor="#fffd3366"
                android:gravity="center|right"
                android:layout_gravity="center|right"
                android:id="@+id/num_coments"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="20.0dip"
                android:src="@drawable/ic_comment_512_off"
                android:text="365 Comentarios"
                customfont:fontName="AvenirMedium.otf" />
        </LinearLayout>
    </FrameLayout>
    <com.yordy.ecoresi.views.CustomFontTextView
        android:textSize="16.0dip"
        android:textColor="#ff777777"
        android:gravity="center_vertical"
        android:layout_gravity="top"
        android:id="@id/descripcion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginBottom="30.0dip"
        android:text="Esta es la descripcion del post"
        customfont:fontName="AvenirMedium.otf" />
</LinearLayout>