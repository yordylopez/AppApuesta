            <TableRow android:background="#ffb9bec2" android:layout_width="fill_parent" android:layout_height="0.70000005dip" android:layout_marginLeft="10.0dip" android:layout_marginTop="5.0dip" android:layout_marginRight="10.0dip" android:layout_marginBottom="5.0dip" />
            <com.yordy.ecoresi.views.CustomFontTextView android:textSize="19.0dip" android:textColor="#000000" android:gravity="center" android:layout_gravity="center|top" android:id="@+id/axu1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10.0dip" android:layout_marginRight="10.0dip"
                android:text="Jugadas" customfont:fontName="AvenirMedium.otf" />

            <TableRow
                android:background="#ffb9bec2"
                android:layout_width="fill_parent"
                android:layout_height="0.70000005dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5.0dip"
