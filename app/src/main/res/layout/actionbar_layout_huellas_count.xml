<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="60dp"
    android:layout_height="fill_parent">
    <TextView
        android:id="@+id/notifcation_image"
        android:clickable="true" android:layout_width="match_parent" android:layout_height="fill_parent"
        android:src="@drawable/ic_whatshot_white_36dp"
        android:text="Jugadas"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/notifcation_textview"
        android:background="@drawable/shape_notification_messages"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginRight="7dp"
        android:text=""
        android:gravity="right"
        android:layout_alignParentRight="true" />
    <Button
        android:id="@+id/notifcation_button_chat"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/transparente" />
</RelativeLayout>
