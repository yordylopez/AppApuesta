<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="0.30000007dip" android:color="#fffcfcfc" />
                    <solid android:color="@color/myPrimaryColor" />
                </shape>
            </item>
            <item android:bottom="3.0dip">
                <layer-list>
                    <item>
                        <shape>
                            <stroke android:width="0.30000007dip" android:color="#fffcfcfc" />
                            <solid android:color="#ffffffff" />
                            <padding android:left="23.0dip" android:top="19.0dip" android:right="22.0dip" android:bottom="16.0dip" />
                        </shape>
                    </item>
                    <item>
                        <bitmap android:gravity="fill" android:src="@drawable/ic_calendar_512_on" />
                    </item>
                </layer-list>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="0.30000007dip" android:color="#fffcfcfc" />
                    <solid android:color="#ffffffff" />
                    <padding android:left="23.0dip" android:top="19.0dip" android:right="22.0dip" android:bottom="19.0dip" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="fill" android:src="@drawable/ic_calendar_512_off" />
            </item>
        </layer-list>
    </item>
</selector>